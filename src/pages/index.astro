---
import Center from '../components/Center.astro'
import Footer from '../components/Footer.astro'
import Page from '../components/Page.astro'
import {
  ABOUT_LIST,
  HISTORY_LIST,
  LINK_LIST,
  NAV_LIST,
  PDF_LIST,
} from '../utils'
---

<Page title="首页">

  <Center
    className="h-screen min-h-120 md:min-h-160 bg-cover bg-center bg-fixed bg-no-repeat"
    innerClassName="flex flex-col"
    style="background-image: url('/assets/img/banner.jpg')"
  >
    <div class="h-2/5 flex justify-center items-center">
      <div class="text-center">
        <img src="/assets/img/logo.png" alt="logo" class="inline-block w-24 md:w-32" />
        <h1 class="mt-1 md:mt-2 text-sm md:text-xl text-gray-500 font-kxzd">華夏一郵邑 神州無同類</h1>
        <input
          readonly
          class="mt-3 md:mt-6 w-72 md:w-lg h-10 md:h-12 px-4 md:px-6 rounded-full bg-white/70 shadow-lg outline-none text-sm cursor-pointer hover:bg-white"
          placeholder="在「高郵志」中搜索"
        />
      </div>
    </div>

    <div class="md:px-40 h-2/5 pt-12 md:pt-0 flex justify-center items-center">
      <div class="w-full flex justify-around items-start">
        {NAV_LIST.map((item, index) => (
          <a
            href={item.to}
            class="h-72 flex flex-col justify-center items-start font-kxzd cursor-pointer hover:opacity-75 hover:-translate-y-1 transform transition duration-200"
          >
            <div class="h-1/5 w-full flex justify-center items-center md:items-start">
              <div
                class="w-6 h-6 md:w-10 md:h-10 rounded-full text-white flex justify-center items-center"
                style={{ backgroundColor: 'rgba(0,0,0, .2)' }}
              >
                {`壹貳叁肆`[index]}
              </div>
            </div>
            <div class="h-4/5 flex justify-center">
              <p class="write-vertical text-xl md:text-3xl">{item.name}</p>
              <p class="ml-1 write-vertical text-gray-400 text-xs md:text-sm">
                {item.period} &nbsp;
                <span class="ml-2 px-1 text-white bg-red-600 font-din">{item.year}</span>
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>

    <div class="h-1/5 flex justify-center items-center opacity-25">
      <img src="/assets/icon/arrow.svg" alt="arrow" class="animation-bounce w-6" />
    </div>

    <div class="absolute z-10 bottom-0 right-0 left-0 py-3 text-xs md:text-sm text-gray-400 flex justify-center">
      <a class="mx-1 md:mx-4 hover:text-gray-600" href="#about">关于本站</a>
      <a class="mx-1 md:mx-4 hover:text-gray-600" href="#pdf">资源共享</a>
      <a class="mx-1 md:mx-4 hover:text-gray-600" href="#history">历代建置</a>
      <a class="mx-1 md:mx-4 hover:text-gray-600" href="#statistics">整理统计</a>
      <a class="mx-1 md:mx-4 hover:text-gray-600" href="#links">友情链接</a>
    </div>
  </Center>

  <Center id="about" className="py-12 md:py-24">
    <h2 class="pb-8 text-center text-2xl md:text-4xl font-light">关于本站</h2>
    <div class="flex flex-wrap -mx-2">
      {ABOUT_LIST.map(({ icon, name, info, url }) => (
        <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 px-2 py-1 md:py-2">
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full h-full p-3 md:p-4 border border-zinc-200 rounded-md hover:bg-zinc-100 transition duration-200 hover:border-zinc-400"
          >
            <div class="flex justify-center items-center">
              <img src={`/assets/icon/${icon}.svg`} alt="icon" class="h-4" />
              <span class="ml-2 font-din">{name}</span>
            </div>
            <div class="mt-1 text-gray-400 text-center text-xs">{info}</div>
          </a>
        </div>
      ))}
    </div>
  </Center>

  <Center id="pdf" className="py-12 md:py-24">
    <h2 class="pb-8 text-center text-2xl md:text-4xl font-light">资源共享</h2>
    <p class="mb-1 text-xs text-gray-400 text-center">提取码：ykvn</p>
    <div class="flex flex-wrap -mx-2">
      {PDF_LIST.map(({ origin, name, size }) => (
        <div class="w-1/2 md:w-1/3 xl:w-1/4 p-1 md:p-2">
          <a
            href="https://pan.baidu.com/s/1Dhph3qodpcNhbISgKfD-Zg"
            target="_blank"
            rel="noopener noreferrer"
            class="w-full h-full p-2 md:p-4 bg-black/3 rounded-md shadow hover:shadow-lg transition duration-200 flex items-start"
          >
            <div>
              <img src="/assets/icon/pdf.svg" alt="pdf" class="w-12" />
            </div>
            <div class="ml-2">
              <p class="text-xs">{name}.pdf</p>
              <p class="text-xs text-gray-500">来源：{origin}</p>
              <p class="text-xs text-gray-500 font-din">{size}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  </Center>

	<Center
		id="history"
		className="py-12 md:py-24 bg-fixed bg-center bg-no-repeat bg-cover"
		style="background-image: url('/assets/img/yizhan.jpg')"
		innerClassName={`${false ? 'h-auto' : 'h-100vh overflow-hidden'}`}
	>
		<h2 class="pb-8 text-center text-2xl md:text-4xl font-light">历代建置</h2>
		{HISTORY_LIST.map(([title, info], index) => (
			<div class="mb-8 text-center">
				<span class="mt-2 text-xs md:text-base font-kai text-gray-600">「 {title} 」</span>
				<p
				  class="mt-2 md:mt-4 font-light text-base md:text-xl"
					set:html={info}
				/>
			</div>
		))}
		{(
			<div class="absolute right-0 bottom-0 left-0 flex justify-center items-center">
				<div
					class={`w-32 h-10 backdrop-blur-md cursor-pointer text-xs text-white rounded-full flex justify-center items-center transition duration-200`}
					role="presentation"
				>
					展开
				</div>
			</div>
		)}
	</Center>

	<Center id="links" className="py-12 md:py-24">
		<h2 class="pb-8 text-center text-2xl md:text-4xl font-light">友情链接</h2>
		<div class="flex flex-wrap justify-center">
			{LINK_LIST.map(({ url, logo }) => (
				<a
					class="inline-block p-6 w-1/3 md:p-10 md:w-1/4 xl:p-10 xl:w-1/5 hover:bg-black/3 rounded-md"
					href={url}
					target="_blank"
					rel="noopener noreferrer"
				>
					<img src={`/assets/img/link-${logo}.png`} alt="link" />
				</a>
			))}
		</div>
	</Center>

  <Footer />

</Page>
