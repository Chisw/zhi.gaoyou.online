---
import Center from '../components/Center.astro'
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import Page from '../components/Page.astro'
---

<Page title="404">

  <Navbar />

  <Center>
    <div
      class="pt-40 pb-48 text-center bg-no-repeat bg-center bg-contain"
      style="background-image: url('/assets/img/cloud.png');"
    >
      <div class="flex-center-center mb-12 text-6xl text-zinc-700 font-kxzd">
        <div class="flex-center-center -mx-1 w-24 h-24 border-4 border-zinc-300 border-double bg-white">肆</div>
        <div class="flex-center-center -mx-1 w-24 h-24 border-4 border-zinc-300 border-double bg-white rounded-full">零</div>
        <div class="flex-center-center -mx-1 w-24 h-24 border-4 border-zinc-300 border-double bg-white">肆</div>
      </div>
      <div class="text-zinc-500 text-xl font-din">404 NOT FOUND</div>
      <div class="mt-2 text-zinc-500 text-sm">该页面不存在，或正在建设中</div>
    </div>
  </Center>

  <Footer />

</Page>
